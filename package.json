{
    "name": "json-pretty-printer",
    "displayName": "json-pretty-printer",
    "description": "Visual Studio Code JSON Pretty Printer",
    "version": "0.0.1",
    "publisher": "euskadi31",
    "engines": {
        "vscode": "^1.27.0"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:euskadi31/vscode-json-pretty-printer.git"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onCommand:extension.prettyPrint"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.prettyPrint",
                "title": "JSON Pretty Print"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./ && ./build.sh ./cmd/json-pretty-print/",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "package": "vsce package -o json-pretty-printer.vsix --baseContentUrl ./"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/strip-json-comments": "0.0.30",
        "strip-json-comments": "^2.0.1"
    }
}
